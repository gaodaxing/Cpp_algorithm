// ConsoleApplication19.cpp : Defines the entry point for the console application.
//

//#include "stdafx.h"

#include <iostream>
#include <iostream>
#include<algorithm>
#include<cstring>
using namespace std;
#define max 3402
#define max2 12881

struct charm {
	int w;
	int d;
	bool operator<(const charm a)const { return w<a.w; }
};

int main() {
	int n, m;//n input, m weight limit
	int mm[max2];//max charm for each mï¼›
	charm Charm[max];
	cin >> n >> m;
	memset(mm, 0, sizeof(mm));
	int i = 0;
	while (n--) {
		cin >> Charm[i].w >> Charm[i].d;
		i++;
	}
	//sort(Charm, Charm + n);
	for (int i = 0; i < n; i++) {
		cout << Charm[i].w << " " << Charm[i].d << endl;
	}
	for (int i = 1; i <= m; i++) {
		for (int j = n - 1; Charm[j].w <= i; j--) {
			mm[i] = ((mm[i - Charm[j].w] + Charm[j].d) > mm[i]) ? (mm[i - Charm[j].w] + Charm[j].d) : mm[i];
		}
	}

	cout << mm[m] << endl;

	return 0;
}
